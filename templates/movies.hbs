{{#each movie}}
<section class="movie-holder" key="{{@key}}">
  <div class="poster">
    <button class="btn btn-default delete-btn hidden"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></button>
    {{#if poster}}
    <img src="{{poster}}" alt="{{title}} poster">
    {{else}}
    <h3>{{title}}</h3>
    {{/if}}
  </div>
  {{#if seenit}}
  <div class="rating">stars go here</div>
  {{else}}
  <div>
    <button class="btn btn-success watched-btn">Watched</button>
  </div>
  {{/if}}
</section>
{{/each}}